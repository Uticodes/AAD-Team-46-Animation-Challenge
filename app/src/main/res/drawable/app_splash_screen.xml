<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="90"
                android:startColor="@color/colorPrimaryDark"
                android:endColor="@color/colorPrimary"
                android:type="linear" />
